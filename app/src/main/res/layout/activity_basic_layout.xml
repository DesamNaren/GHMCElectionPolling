<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_telangana"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/telangana_logo"
        android:layout_marginStart="@dimen/dp_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/img_ghmc"
        android:layout_toRightOf="@id/img_telangana"
        android:shadowColor="@color/colorPrimary"
        android:text="@string/app_name_release"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp"
        android:textStyle="bold"
        android:layout_toStartOf="@id/img_ghmc"
        android:layout_toEndOf="@id/img_telangana" />

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/img_ghmc"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/ghmc_right"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_20" />

</RelativeLayout>